pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn compile'
      }
        steps{
          sh 'mvn Build'
        }
       steps{
        sh 'mvn test'
      }
      steps{
        sh 'mvn Package'
      }
    

      steps{
        sh 'mvn -version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'npm --version'
      }
    }
  }
}
