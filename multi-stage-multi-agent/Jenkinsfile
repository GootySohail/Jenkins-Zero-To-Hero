pipeline {
  agent none

  stages {
    stage('Back-end') {
      agent {
        docker {
          image 'maven:3.8.6-openjdk-17'
        }
      }
      steps {
        sh 'mvn clean install'
        // Display Maven version
        sh 'mvn -version'
      }
    }
    
    stage('Front-end') {
      agent {
        docker {
          image 'node:16-alpine'
        }
      }
      steps {
        // Display npm version
        sh 'npm --version'
      }
    }
  }
}
