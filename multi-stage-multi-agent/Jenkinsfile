pipeline {
  agent none

  stages {
    stage('Back-end') {
      agent {
        docker {
          image 'maven:3.8.6-openjdk-17'
        }
      }
      steps {
        // Compile the project
        // Build the project
        // Run tests
        sh 'mvn test'
        // Package the project
        sh 'mvn package'
        sh 'mvn clean package'
        // Display Maven version
        sh 'mvn -version'
      }
    }
    
    stage('Front-end') {
      agent {
        docker {
          image 'node:16-alpine'
        }
      }
      steps {
        // Display npm version
        sh 'npm --version'
      }
    }
  }
}
